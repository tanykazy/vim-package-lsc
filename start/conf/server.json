{
    "language": {
        "typescript": {
            "command": {
                "name": "typescript-language-server",
                "options": [
                    "--stdio",
                    "--tsserver-path ./tsserver"
                ],
                "install": "npm install typescript-language-server",
                "dependents": [
                    "npm install typescript"
                ]
            },
            "path": "node_modules/.bin"
        },
        "javascript": {
            "command": {
                "install": "npm install typescript-language-server",
                "start": "typescript-language-server --stdio --tsserver-path ./tsserver"
            },
            "path": "node_modules/.bin"
        },
        "json": {
            "command": {
                "name": "vscode-json-languageserver",
                "options": [
                    "--stdio"
                ],
                "install": "npm install vscode-json-languageserver"
            },
            "path": "node_modules/.bin"
        },
        "sh": {
            "command": {
                "install": "npm install bash-language-server",
                "start": "npx bash-language-server start"
            }
        },
        "yaml": {
            "command": {
                "install": "npm install yaml-language-server",
                "start": "npx yaml-language-server --stdio"
            }
        },
        "vim": {
            "command": {
                "install": "npm install vim-language-server",
                "start": "npx vim-language-server --stdio"
            },
            "initializationOptions": {
                "isNeovim": false,
                "iskeyword": "@,48-57,_,192-255,-#",
                "vimruntime": "",
                "runtimepath": "",
                "diagnostic": {
                    "enable": true
                },
                "indexes": {
                    "runtimepath": true,
                    "gap": 100,
                    "count": 3,
                    "projectRootPatterns": [
                        "strange-root-pattern",
                        ".git",
                        "autoload",
                        "plugin"
                    ]
                },
                "suggest": {
                    "fromVimruntime": true,
                    "fromRuntimepath": false
                }
            }
        }
    }
}